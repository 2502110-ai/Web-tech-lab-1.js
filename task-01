        function sayHello(name, callback) {
            setTimeout(() => {
                const greetingMessage = `Hello, ${name}!`;
                callback(greetingMessage);
            }, 3000);
        }

        sayHello("Ayesha", (message) => {
            console.log(message); 
        });
    </script>
