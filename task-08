    <h2>Page Reload Counter: <span id="counter"></span></h2>
    <script>
        let count = sessionStorage.getItem("reloadCount");

        if (count === null) {
            count = 1;
        } else {
            count = parseInt(count) + 1;
        }
        sessionStorage.setItem("reloadCount", count);
        document.getElementById("counter").innerText = count;
    </script>
</body>
