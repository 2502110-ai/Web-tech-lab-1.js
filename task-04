<body>
    <h1>Name: Noor Ul Ain</h1>
    <p>Roll No: 2502110</p>

    <script>
        const login = () => {
            return new Promise((resolve, reject) => {
                setTimeout(() => {
                    console.log("Step 1: Ayesha logged in.");
                    resolve({ userId: 123 });
                }, 1000);
            });
        };

        const getProfile = (userId) => {
            return new Promise((resolve, reject) => {
                setTimeout(() => {
                    console.log(`Step 2: Fetching profile for user ID ${userId}.`);
                    reject("Failed to load profile details.");
                }, 1000);
            });
        };

        login()
            .then(user => {
                return getProfile(user.userId);
            })
            .then(profile => {
                console.log("Step 3: Profile details received ", profile);
            })
            .catch(error => {
                console.error("An error occurred during the process", error);
            });
    </script>
</body>
</html>
