    <p>Roll No: 2502110</p>

    <script>
        function downloadImage(url) {
            return new Promise((resolve, reject) => {
                setTimeout(() => {
                    if (url) {
                        resolve(`Image downloaded successfully from ${url}`);
                    } else {
                        reject("Error: Failed to download image.");
                    }
                }, 2000);
            });
        }

        downloadImage("https://www.shutterstock.com/image-vector/noor-nur-arabic-calligraphy-name-260nw-2337603585.jpg")
            .then(message => console.log(message))
            .catch(error => console.log(error));
    </script>
</body>
